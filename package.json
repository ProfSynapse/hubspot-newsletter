{
  "name": "hubspot-newsletter-bot",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspace=common && npm run build --workspace=backend && npm run build --workspace=frontend && npm run build --workspace=scraper",
    "start:backend": "npm run start --workspace=backend",
    "start:scraper": "npm run start --workspace=scraper",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "test": "npm run test --workspace=backend"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}