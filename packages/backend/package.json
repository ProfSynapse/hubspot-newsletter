    "axios": "^1.6.2"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.8",
    "@types/jsdom": "^21.1.6",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
